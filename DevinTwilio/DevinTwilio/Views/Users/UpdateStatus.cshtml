@model DevinTwilio.Models.UserViewModels

@{
    ViewBag.Title = "Edit Status";
}
<br />

@using (Html.BeginForm("UpdateStatus", "Users", FormMethod.Post, new { @class = "form-horizontal register-form", role = "form" }))
{
    <div class="form-group">

        @Html.HiddenFor(m => m.User_ID)
        @Html.LabelFor(m => m.UserStatus, new { @class = "col-md-4 control-label" })
        <div class="col-md-8">
            @Html.DropDownListFor(M => M.StatusId, new SelectList(Model.UserStatusList, "StatusId", "Status"), new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-4 col-md-8">
            <input type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
}

