@using Microsoft.AspNet.Identity

@{
    var userName = "";
    if (Session["loggedUser"] != null)
    {
        var user = (DevinTwilio.Models.UserViewModels)Session["loggedUser"];
        userName = user.User_Name;
    }

    if (HttpContext.Current.Session["loggedUser"] != null)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
        {
     
            <ul class="nav navbar-nav navbar-right">
                <li>
                    @Html.ActionLink("Hello " + userName + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
            </ul>
        }
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("About", "About", "Home", routeValues: null, htmlAttributes: new { id = "aboutLink" })</li>
            <li>@Html.ActionLink("Contact", "Contact", "Home", routeValues: null, htmlAttributes: new { id = "contactLink" })</li>
            @*<li>@Html.ActionLink("Register", "Register", "Users", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>*@
            <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
        </ul>
    }


}
